<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.library.dao.BookDAO">

	<select id="listBook" resultType="com.spring.library.dto.BookDTO">
	<![CDATA[
		SELECT * FROM BOOK
	]]>
	</select>
	
	<select id="bookInfo" resultType="com.spring.library.dto.BookDTO">
		SELECT * FROM BOOK WHERE BOOK_ID = #{param1}
	</select>
	
	<select id="searchBook" resultType="com.spring.library.dto.BookDTO">
	<![CDATA[
		SELECT * FROM BOOK WHERE UPPER(TITLE) LIKE '%' || UPPER(#{param1}) || '%'
	]]>
	</select>
	
</mapper>